<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create" class="active">Update Users</a>
    </div>

    <div class="from-add-new">
      <form action="/delete-user" method="POST">
        <fieldset>
          <legend>Delete a users</legend>
          <div class="input-group d-none">
            <label>Id: </label>
            <input type="text" name="userId" value=" <%= userDelete.id%>" />
          </div>
          <div class="input-group">
            <label>Are you sure to delete this user with Email: </label>
            <input type="text" name="email" value=" <%= userDelete.email%>" />
          </div>
          <div>
            <button>Confirm</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
